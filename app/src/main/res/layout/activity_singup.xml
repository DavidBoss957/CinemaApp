<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SingupActivity"
    android:padding="32dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <TextView
        android:id="@+id/textoRegistro"
        android:layout_width="279dp"
        android:layout_height="39dp"
        android:paddingLeft="75dp"
        android:paddingRight="75dp"
        android:text="Registro"
        android:textColor="#FFD700"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#757575"

        android:hint="introduce nombre"
        app:layout_constraintEnd_toEndOf="@+id/textoRegistro"
        app:layout_constraintStart_toStartOf="@+id/textoRegistro"
        app:layout_constraintTop_toTopOf="@+id/guideline" />



    <EditText
        android:id="@+id/contrasena"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#757575"

        android:hint="Introduce contrase単a"
        app:layout_constraintEnd_toEndOf="@+id/textoRegistro"
        app:layout_constraintStart_toStartOf="@+id/textoRegistro"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        />

    <EditText
        android:id="@+id/confirmarContrase単a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Confirme contrase単a"
        android:layout_marginTop="24dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#757575"

        app:layout_constraintEnd_toEndOf="@+id/textoRegistro"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/textoRegistro"
        app:layout_constraintTop_toBottomOf="@+id/contrasena" />

    <EditText
        android:id="@+id/correo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Introduzca correo"
        android:textColor="#FFFFFF"
        android:textColorHint="#757575"

        app:layout_constraintEnd_toEndOf="@+id/textoRegistro"
        app:layout_constraintStart_toStartOf="@+id/textoRegistro"
        app:layout_constraintTop_toBottomOf="@+id/confirmarContrase単a" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#757575"

        android:text="masculino"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correo" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#757575"

        android:text="femenino"
        app:layout_constraintEnd_toStartOf="@+id/radioButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correo" />

    <Button
        android:id="@+id/botonRegistrar"
        android:layout_width="236dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#EAAA37"
        android:text="Registrar"
        android:textColor="#000000"

        app:layout_constraintEnd_toEndOf="@+id/textoRegistro"
        app:layout_constraintStart_toStartOf="@+id/textoRegistro"
        app:layout_constraintTop_toBottomOf="@+id/radioButton" />

</androidx.constraintlayout.widget.ConstraintLayout>